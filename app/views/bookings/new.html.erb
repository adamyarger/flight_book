<h1> Booking Page </h1>

<h3> Trip Details </h3>

<div class="row">
	<div class="details col-md-6">
		<p><%= @flight.from_airport.code %>  ->  <%= @flight.to_airport.code %></p>
		<p>Your flight departs on <%= @flight.start_time.strftime("%B %d, %Y") %>, </p>
		<p> at <%= @flight.start_time.strftime('%I:%M:%S %p')%></p>
	</div>
</div>

<div class="row">
	<%= form_for(@booking) do |f| %>
		<%= f.hidden_field :flight_id %>
		<div class="col-md-6">
			<h3>Passenger Info</h3>
			<%= f.fields_for :passengers do |p| %>

				<%= p.label :name %>
				<%= p.text_field :name, class: "form-control" %>

				<%= p.label :email %>
				<%= p.text_field :email, class: "form-control" %>

				<%= p.submit "Book Flight", class: "btn btn-success" %>
			<% end %>
		</div>
	<% end %>
</div>




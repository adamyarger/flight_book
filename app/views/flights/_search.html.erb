

<%= form_tag flights_path, method: 'get' do %>
<div class="row">
	<%= hidden_field_tag :search %>
	<div class="col-md-2">
		<%= select_tag :from, options_for_select(@airports), prompt: "From", class: 'form-control' %>
	</div>

	<div class=" col-md-2">
		<%= select_tag :to, options_for_select(@airports), prompt: "To", class: 'form-control' %>
	</div>

	<div class="col-md-2">
		<%= select_tag :date, options_for_select(@date), prompt: "Date", class: 'form-control' %>
	</div>

	<div class="col-md-2">
		<%= select_tag :passenger, options_for_select(@passenger), prompt: "Passenger", class: 'form-control' %>
	</div>

	<div class="col-md-2">
		<%= submit_tag "Search", :name => nil, class: "btn btn-primary" %>
	</div>

</div>
<% end %>